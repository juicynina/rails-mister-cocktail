
<div class="card">
  <div class="drink-img" style="background-image: url('<%= cl_image_path @cocktail.photo.key %>')">
    <h1><%= @cocktail.name %></h1>
    <div ></div>
  </div>
    <div class="card-body">
      <h3>Recipe</h3>
      <ul class='mt-3'>
          <% @doses.each do |dose| %>
          <li><%= dose.description %></li>
          <li><%= dose.ingredient.name %></li>
          <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe,
              dose_path(dose),
              method: :delete,
              data: {confirm: 'Are you sure you want to erase?'} %>
        <% end %>
      </ul>
    </div>
</div>
<%= link_to "Create dose", new_cocktail_dose_path(@cocktail) %><br>
<%= link_to "Go back to Cocktails", cocktails_path %>
